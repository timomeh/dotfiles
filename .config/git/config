  path = ~/.config/git/config_railway

[core]
  compression = 9
  editor = code --wait
  pager = delta
  ignorecase = false

[url "git@github.com:timomeh/"]
  insteadOf = "timomeh:"

[url "git@github.com:railwayapp/"]
  insteadOf = "railway:"

[url "git@github.com:"]
  insteadOf = "gh:"

[init]
  defaultBranch = main

[pull]
  rebase = true

[push]
  default = current
  followTags = true

[status]
  branch = true
  showStash = true

[rebase]
  autoStash = true
  missingCommitsCheck = warn

[diff]
  colorMoved = default
  tool = default-difftool
  renames = copies

[delta]
  navigate = true

[difftool "default-difftool"]
  cmd = code --wait --diff $LOCAL $REMOTE

[interactive]
  diffFilter = delta --color-only

[pager]
  branch = false
  tag = false

[log]
  abbrevCommit = true
  graphColors = blue,yellow,cyan,magenta,green,red

[color]
  ui = true
  ignorecase = false

[color "decorate"]
  HEAD = red
  branch = blue
  tag = yellow
  remoteBranch = magenta

[merge]
  conflictstyle = zdiff3

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[color "diff"]
  meta = yellow
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "branch"]
  current = magenta
  local = default
  remote = yellow
  upstream = green
  plain = blue

[branch]
  sort = -comitterdate

[tag]
  sort = -taggerdate

[alias]
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  lg = !"git lg1"
  l = !"git log --graph --all --pretty=format:'%C(magenta)%h %C(white) %an  %ar%C(blue)  %D%n%s%n'"
  wip = !"[[ $(git log -1 --pretty=%B) == \"WIP\" ]] && (git reset --soft \"HEAD^\") || (git add . && git commit -m \"WIP\")"

  ps = push
  pl = pull

  a = add
  aa = add -A
  ap = add --patch
  c = commit --verbose
  ca = commit -a --verbose
  cm = commit -m
  cam = commit -a -m
  m = commit --amend --verbose

  cdiff = "!f() { git diff "$1"^.."$1"; }; f"

  s = status

  co = checkout
  cob = checkout -b
  cof = checkout --
  pr = "!f() { git fetch upstream "pull/$1/head" && git checkout FETCH_HEAD; }; f"

  housekeeping = !"git branch -vv | grep 'origin/.*: gone]' | awk '{print $1}' | xargs git branch -D"

  cdiff = "!f() { git diff $1^ $1; }; f"

  # list aliases
  wat = !"git config -l | grep alias | cut -c 7-"
